---
import Layout from "@/layouts/Layout.astro";

const { title, description, date, author } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
      <h1 class="text-5xl font-bold mb-4 glitch" data-text={title}>{title}</h1>
      <p class="text-cyber-pink-light text-lg mb-4">{description}</p>
      <div class="flex gap-4 text-sm text-cyber-pink">
        <span>üìÖ {new Date(date).toLocaleDateString()}</span>
        {author && <span>‚úçÔ∏è {author}</span>}
      </div>
    </div>

    <div class="prose prose-invert max-w-none language-js">
      <slot />
    </div>

    <div class="mt-12 pt-8 border-t border-cyber-pink">
      <a href="/classes" class="inline-block neon-button">‚Üê Back to Classes</a>
    </div>
  </article>
</Layout>

